<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#F0F1F9</item>
        <item name="alarmColor">#808080</item>
        <item name="remindMeSnoozeColor">#808080</item>
        <item name="android:itemBackground">#FCFCFC</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="todoBackground">#FFFFFF</item>
        <item name="todoText">#808080</item>
        <item name="colorControlNormal">#808080</item>
        <item name="switchStyle">@style/AppTheme.Switch</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppTheme.Spinner</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFC107</item>
        <item name="backgroundColor">#303030</item>
        <item name="alarmColor">#FFFFFF</item>
        <item name="remindMeSnoozeColor">#FFFFFF</item>
        <item name="android:itemBackground">#303030</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="todoBackground">#444444</item>
        <item name="todoText">#FFFFFF</item>
        <item name="colorControlNormal">#808080</item>
        <item name="switchStyle">@style/DarkTheme.Switch</item>
        <item name="android:spinnerDropDownItemStyle">@style/DarkTheme.Spinner</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar.MenuTextStyle"
        parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="AppTheme.Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:colorForeground">#808080</item>
    </style>

    <style name="DarkTheme.Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#FFC107</item>
        <item name="android:colorForeground">#808080</item>
    </style>

    <style name="AppTheme.Spinner">
        <item name="android:textColor">#808080</item>
        <item name="android:background">#F0F1F9</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DarkTheme.Spinner">
        <item name="android:textColor">#808080</item>
        <item name="android:background">#303030</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>